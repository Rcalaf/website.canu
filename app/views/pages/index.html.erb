<script>
	$(document).ready(function(){ 
				

	      	$("#bg, #bg_2").show();
	      	$("#bg_video").delay(800).show();
	      	
	      	 
	
		if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
			$('#video-viewport, .mobile_hide, p.description, #comments_container, .arrow_down').remove();
			$('.mobile_show').show();
		}

		$(".urgent").hide();
		$(".urgent").delay(300).show();
		$(".urgent").click(function(){
			$(".urgent").hide();		
		})
		
	    
	    var min_w = 300; // minimum video width allowed
		var vid_w_orig;  // original video dimensions
		var vid_h_orig;
		
		jQuery(function() { // runs after DOM has loaded
		    
		    vid_w_orig = parseInt(jQuery('video, #bg, #bg_2').attr('width'));
		    vid_h_orig = parseInt(jQuery('video, #bg, #bg_2').attr('height'));
		    $('#debug').append("<p>DOM loaded</p>");
		    
		    jQuery(window).resize(function () { resizeToCover(); });
		    jQuery(window).trigger('resize');
		});
		
		function resizeToCover() {
		    
		    // set the video viewport to the window size
		    jQuery('#video-viewport').width(jQuery(window).width());
		    jQuery('#video-viewport').height($('#sec_1').height());
		
		    // use largest scale factor of horizontal/vertical
		    var scale_h = jQuery(window).width() / vid_w_orig;
		    var scale_v = jQuery(window).height() / vid_h_orig;
		    var scale = scale_h > scale_v ? scale_h : scale_v;
		
		    // don't allow scaled width < minimum video width
		    if (scale * vid_w_orig < min_w) {scale = min_w / vid_w_orig;};
		
		    // now scale the video
		    jQuery('video, #bg, #bg_2').width(scale * vid_w_orig);
		    jQuery('video, #bg, #bg_2').height(scale * vid_h_orig);
		    // and center it by scrolling the video viewport
		    jQuery('#video-viewport').scrollLeft((jQuery('video, #bg, #bg_2').width() - jQuery(window).width()) / 2);
		    jQuery('#video-viewport').scrollTop((jQuery('video, #bg, #bg_2').height() - jQuery(window).height()) / 2);
		    
		};
		
			    
	});
</script>
