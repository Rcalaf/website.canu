	</head>
	<body>
		<div id="fb-root"></div>
		<script>(function(d, s, id) {
		  var js, fjs = d.getElementsByTagName(s)[0];
		  if (d.getElementById(id)) return;
		  js = d.createElement(s); js.id = id;
		  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
		  fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));</script>
		
		<div class="top_bg_index"></div>
		<div class="top">
			<div class="logo_top">
				<!--<a href="<%= root_url%>"><img class="logo_active" src="/assets/canu_logo.svg"></a>-->
				<%= link_to (image_tag 'canu_logo.svg', :class => (params[:action] == 'index' ? 'logo_active' : 'logo_passive')), root_url%>
			</div>
			<ul class="menu">
				<li><%= link_to 'World',world_url, :class => (params[:action] == 'world' ? 'selected' : nil) %></li>
				<li><%= link_to 'Product',product_url, :class => (params[:action] == 'product' ? 'selected' : nil)%></li>
								<!--<li><a href="#" id="tribes">Tribes</a><div id="soon">soon</div></li>-->
				<li><a href="http://canugettogether.tumblr.com">Blog</a>
				<li id="feedback_btn"><a>Feedback wall</a>
			</ul>
			<a href="https://itunes.apple.com/nz/app/canu-get-together/id697998179?mt=8#"><img class="appstore_badge" src="/assets/badge_135x40.svg"></a>
			<div class="codes">
				<%unless flash[:ok].nil?%>
					<div id="confirmation"><%=flash[:ok]%></div>
				<%end%>
				<div class="form_window" id="form_join"<%= flash[:goaway]%>>
					<%= form_for @user, :url => new_user_url do |f|%>
					<input type="submit" name="submit" value="GO" class="submit_button" id="submit_join"/>
					<div class="input_holder">
						<input name="user[email]" type="email" id="email" class="email<%= flash[:error].nil? ? '' : ' error_border'%>" placeholder="<%= flash[:error].nil? ? 'e-mail me about Android' : flash[:error]%>"/>
					</div>
					<%end%>
				</div>
			</div>
		</div>
		<div id="comments_blur"></div>
		<div id="comments_container">
			<div id="comments_description">
				 Feedback, advice, compliments, positive words, complaints, whatever you feel like sharing...<br/><br/>
				 <span style="font-weight: 700;">Share it all.</span>
				
			</div>
			<div id="close_btn"></div>
			<div id="comments">
				
				<div id="disqus_thread"></div>
				<div id="hider"></div>
			    <script type="text/javascript">
			        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
			        var disqus_shortname = 'canu'; // required: replace example with your forum shortname
			
			        /* * * DON'T EDIT BELOW THIS LINE * * */
			        (function() {
			            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
			            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
			            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
			        })();
			    </script>
			</div>
		</div>
		<%= yield%>
	</body>
</html>