<div class="wrapper">

	<div class="wr_feed" id="wr_local" style="left: 0;">
		<%  @activities.each do |activity|%>
			<%# activity%>
		<div class="feed_container">
			<div class="creator_info">
				<img src="http://api.canu.se/<%=activity['user']['profile_pic']%>" onerror="MissingUserpic(this);" class="creator_userpic"/>
				<a class="creator_name"><%= activity['user']['first_name']%></a>
				
				<span class="activity_hours"><%= Time.parse(activity['start']).strftime("%H:%M")%> - <span><%=Time.parse(activity['end_date']).strftime("%H:%M")%></span></span>	
				<span class="activity_date"><%= Time.parse(activity['start']).strftime("%d %h")%></span>
			
			</div>
			<div class="activity_header">
				<a href="<%=fullview_url(activity['id'])%>">
				<p class="activity_title"><%= activity['title']%></p>
				<p class="activity_address"><%= activity['street']%>, <%= activity['city']%>, <%= activity['zip_code']%></p>
				</a>
			</div>
		</div>
		<%end%>		
	</div>
	
	<div class="wr_feed" id="wr_tribes" style="left: 100%;">
		<div class="empty_tribes">
			<p class="situation">It seems to be a quite day</p>
		</div>
	</div>
	
	<div class="wr_feed" id="wr_me" style="left: 200%;">
<%  @activities.each do |activity|%>
			<%# activity%>
		<div class="feed_container">
			<div class="creator_info">
				<img src="http://api.canu.se/<%=activity['user']['profile_pic']%>" onerror="MissingUserpic(this);" class="creator_userpic"/>
				<a class="creator_name"><%= activity['user']['first_name']%></a>
				
				<span class="activity_hours"><%= Time.parse(activity['start']).strftime("%H:%M")%> - <span><%=Time.parse(activity['end_date']).strftime("%H:%M")%></span></span>	
				<span class="activity_date"><%= Time.parse(activity['start']).strftime("%d %h")%></span>
			
			</div>
			<div class="activity_header">
				<a href="<%=fullview_url(activity['id'])%>">
				<p class="activity_title"><%= activity['title']%></p>
				<p class="activity_address"><%= activity['street']%>, <%= activity['city']%>, <%= activity['zip_code']%></p>
				</a>
			</div>
		</div>
		<%end%>

	</div>
</div>
<ul class="tabs">
	
	<!--<div id="selected"></div>-->
	<li class="tab" id="tab_local"></li>
	<li class="tab" id="tab_tribes"></li>
	<li class="tab" id="tab_me"></li>

	<div class="my_profile">
		<img src="#" onerror="MissingUserpic(this)" class="logedin_userpic"/>
		<a class="logedin_name">Jacob Koloa</a>
		<a class="logedin_username">thejacob</a>
		<a class="logedin_settings" href="<%=settings_url%>"></a>
	</div>
</ul>
