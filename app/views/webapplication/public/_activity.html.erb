<%# activity["invitation_token"]%>
<li>
	<a href="<%= show_local_activities_url(activity["id"])%>">
		<div class="activity_container_public">
			<div class="activity_header">
				<div style="background-image: url(/assets/webapp/icon_userpic@2x.png);" class="creator_userpic">
					<div class="alternative_userpic" style=""></div>
				</div>
				<a class="creator_name">
					<%= activity["user"]["user_name"]%>
					<span class="how_many">& <%= activity["attendee_ids"].size%></span>
				</a>
				<span class="clear"></span>
				<a href="https://itunes.apple.com/us/app/canu-get-together/id697998179?mt=8&ls=1" class="go_button"></a>
				<p class="activity_title"><%= activity["title"]%></p>
				<span class="clear_line_2"></span>
				<p class="activity_address"><%= activity["street"].empty? ? "somewhere" : activity["street"]%>, <%= activity["city"]%></p>
				<span class="activity_hours">
					<%= DateTime.strptime(activity["start"], '%Y-%m-%dT%H:%M:%S%z').strftime("%H:%M")%> - 
					<span><%= DateTime.strptime(activity["end_date"], '%Y-%m-%dT%H:%M:%S%z').strftime("%H:%M")%></span>
				</span>			
				
				<span class="activity_date"><%= DateTime.strptime(activity["start"], '%Y-%m-%dT%H:%M:%S%z').strftime("%d-%m-%Y")%></span>
			</div>
			<span class="clear"></span>
		</div>
	</a>
</li>

