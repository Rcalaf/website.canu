<script>
$(document).ready(function(){
	$("#suggest_trigger").click(function() {	
		$(this).html($(this).html() == 'Suggest Activity' ? 'Close' : 'Suggest Activity');
		$(".suggest_bg").fadeToggle();
		$(".suggest_activity").toggleClass("show_suggest");
	});	
	$(".suggest_bg").click(function() {	
		$("#suggest_trigger").html('Suggest Activity');
		$(".suggest_bg").fadeToggle();
		$(".suggest_activity").toggleClass("show_suggest");
	});	
});		
</script>

