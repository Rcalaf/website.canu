<%# activityart["invitation_token"]%>
<span class="title" onclick="window.location.href='<%= show_local_activities_url(activityart["id"])%>'">
	<%= activityart["title"]%>
	<div class="artsy_details">
			<%= DateTime.strptime(activityart["start"], '%Y-%m-%d').strftime("%b %d")%>, 
			<%= DateTime.strptime(activityart["start"], '%Y-%m-%dT%H:%M:%S%z').strftime("%H:%M")%>	
		<span class="place">
			<%= activityart["street"].empty? ? activityart["place_name"] : activityart["street"] + "  " + activityart["city"]%>
			<%= activityart["city"].empty? ? activityart["country"] : " "%>	
		</span>
	</div>
</span>
<span class="no_und">,&nbsp</span>


