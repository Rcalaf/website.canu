<div class="authorization_header">Welcome Back</div>
<%= form_tag '/sign-in' do%>
<div class="authorization_form">
	<div class="input_classic">
		<input class="authorization" name="email" placeholder="Username or Email"/>
	</div>
	<div class="input_classic">
		<input name="password" type="password" placeholder="Password"/>
	</div>	
	<div class="input_classic">
		<input type="submit" class="submit" value="Sign In"/>
	</div>	
	<a class="guidance"></a>
	<a class="guidance_option" href="<%=resetpassword_url%>">Forgot Password</a>
	<a class="guidance_option" href="<%=iamnew_account_url%>">I'm New</a>
</div>
<%end%>